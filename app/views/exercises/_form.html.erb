<%= form_for @exercise, :html => { :class => "form-horizontal exercise" } do |f| %>

    <% if @exercise.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@exercise.errors.count, "error") %> prohibited this exercise from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @exercise.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control' %>
    <%= error_span(@exercise[:name]) %>
  </div>

  <div class="form-group">
    <%= f.label :exrx_url, "ExRx URL" %>
    <%= f.text_field :exrx_url, :class => 'form-control' %>
    <%= error_span(@exercise[:exrx_url]) %>
  </div>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            exercises_path, :class => 'btn btn-default' %>

<% end %>
