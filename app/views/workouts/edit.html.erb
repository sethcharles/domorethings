<%- model_class = Workout -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<%= link_to t('.back', :default => t("helpers.links.back")),
              workouts_path, :class => 'btn btn-default'  %>
<%= link_to t('.new', :default => t("helpers.links.new")),
              new_workout_set_path(@workout), :class => 'btn btn-default'  %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              workout_path(@workout),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Exercise</th>
      <th>Weight</th>
      <th>Reps</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @workout.workout_sets.order(:created_at).each do |set| %>
      <tr>
        <td><%= set.exercise.name %></td>
        <td><%= set.weight %></td>
        <td><%= set.reps %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_workout_set_path(@workout, set), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      workout_set_path(@workout, set),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
